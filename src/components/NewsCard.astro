---
export interface Props {
  title: string
  excerpt: string
  image: string
  slug: string
  pubDate: Date
}

const { title, excerpt, image, slug, pubDate } = Astro.props
const formattedDate = pubDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
})
---

<article
  class="bg-dark-900 rounded-lg overflow-hidden border border-dark-800 hover:border-barca-blue transition-all duration-300 group"
>
  <div class="aspect-video overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
  </div>

  <div class="p-6">
    <time class="text-sm text-dark-400 mb-2 block">{formattedDate}</time>

    <h2
      class="text-xl font-bold text-white mb-3 group-hover:text-barca-yellow transition-colors line-clamp-2"
    >
      <a href={`/news/${slug}`} class="hover:underline">
        {title}
      </a>
    </h2>

    <p class="text-dark-300 mb-4 line-clamp-3">
      {excerpt}
    </p>

    <a
      href={`/news/${slug}`}
      class="inline-flex items-center text-barca-blue hover:text-barca-yellow font-medium transition-colors"
    >
      Leer más →
    </a>
  </div>
</article>
