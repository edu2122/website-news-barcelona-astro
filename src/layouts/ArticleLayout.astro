---
import Layout from './Layout.astro'
import { ArrowLeft, Calendar, Clock } from '@lucide/astro'

export interface Props {
  title: string
  description: string
  pubDate: Date
  image: string
  readingTime?: string
}

const {
  title,
  description,
  pubDate,
  image,
  readingTime = '5 min'
} = Astro.props

const formattedDate = pubDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
})
---

<Layout title={title} description={description} image={image}>
  <div class="min-h-screen bg-dark-950">
    <!-- Header -->
    <header class="border-b border-dark-800">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-barca-blue hover:text-barca-yellow transition-colors"
        >
          <ArrowLeft size={20} />
          <span class="font-medium">Volver a noticias</span>
        </a>
      </div>
    </header>

    <!-- Article -->
    <article class="max-w-4xl mx-auto px-4 py-8">
      <!-- Article Header -->
      <header class="mb-8">
        <h1
          class="text-4xl md:text-5xl font-bold text-white mb-4 leading-tight"
        >
          {title}
        </h1>

        <div class="flex items-center gap-6 text-dark-400 mb-6">
          <div class="flex items-center gap-2">
            <Calendar size={16} />
            <time datetime={pubDate.toISOString()}>{formattedDate}</time>
          </div>
          <div class="flex items-center gap-2">
            <Clock size={16} />
            <span>{readingTime} de lectura</span>
          </div>
        </div>

        <img
          src={image}
          alt={title}
          class="w-full h-64 md:h-96 object-cover rounded-lg mb-8"
        />
      </header>

      <!-- Article Content -->
      <div
        class="prose prose-invert prose-lg max-w-none prose-headings:text-white prose-p:text-dark-200 prose-a:text-barca-blue hover:prose-a:text-barca-yellow prose-strong:text-white prose-blockquote:border-barca-blue prose-blockquote:text-dark-300"
      >
        <slot />
      </div>
    </article>

    <!-- Related Articles -->
    <section class="max-w-4xl mx-auto px-4 py-12 border-t border-dark-800">
      <h2 class="text-2xl font-bold text-white mb-6">Noticias relacionadas</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <!-- This would be populated with related articles -->
        <div class="bg-dark-900 rounded-lg p-6 border border-dark-800">
          <h3 class="font-semibold text-white mb-2">
            Próximamente más noticias relacionadas
          </h3>
          <p class="text-dark-400">
            Estamos trabajando en mostrar contenido relacionado automáticamente.
          </p>
        </div>
      </div>
    </section>
  </div>
</Layout>
